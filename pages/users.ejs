<!DOCTYPE html>
<html lang="en">
<head>
    <title>Пользователи</title>
    <%- include('../partials/head_p'); %>
    <style>
        body {
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex-grow: 1;
        }

        footer {
            flex-shrink: 0;
        }

        .showOrder{
            margin-left: 40%;
            
        }

        .row1{
            margin-top: 1%;
            margin-left: 5%;
            margin-right: 5%;
            margin-bottom: 1%;
        } 
        .surname {
            color: #4088BC;
            font-weight: bold;
        }
        .name {
            color: #4088BC;
            font-weight: bold;
        }
        .patronimic {
            color: #4088BC;
            font-weight: bold;
        }
        .companyName {
            color: #4088BC;
            font-weight: bold;
        }
        .email {
            color: #4088BC;
            font-weight: bold;
        }

        .phone {
            color: #4088BC;
            font-weight: bold;
            position: absolute;
        }
        .g{
            display: inline;
            position:relative r;
        }
        .fi{
            width: 164%;
        }
        .pos{
            position: absolute;
        }
        .pos{
            position: relative;
        }
    </style>
</head>
<body>

<header>
    <%- include('../partials/header', {role: role}); %>
</header>

<main>
    <div class="container">
        <h3>Пользователи</h3>
        <form class="navbar-form navbar-right" action="">
            <div class="input-group fi">
                <input type="text" id="inputSearch" class="form-control find fi" placeholder="Фильтрация пользователей">
                <div class="input-group-btn">
                    <button class="btn btn-primary findbtn" id="search-button" type="button">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <% if(errorMes!= null && errorMes!= undefined) {%>     
        <div class="alert alert-danger" role="alert">
            Ошибка: <%= errorMes %> 
        </div>
        <% } %>

        <div class="order">
            <div class="row rang first ord row1">
                <div class="col-sm-1 ">
                    <p>Фамилия</p>
                </div>
                <div class="col-sm-1 ">
                    <p>Имя</p>
                </div>
                <div class="col-sm-2 ">
                    <p>Отчество</p>
                </div>
                <div class="col-sm-2 ">
                    <p>Организация</p>
                </div>
                <div class="col-sm-2 ">
                    <p>Почта</p>
                </div>
                <div class="col-sm-2 ">
                    <p>Телефон</p>
                </div>
                <div class="col-sm-1 ">
                    <p>Модератор</p>
                </div>
                <div class="col-sm-1 ">
                    <p>Сохранить</p>
                </div>
            </div>
            <% for(let i = 0; i< users.length; i++) {%> 
               <%- include('../partials/user.ejs', {users: users[i]}); %>
            <% } %> 
        </div>

</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>
<script>
    function search() {
    let input = document.getElementById("inputSearch");
    let filter = input.value.toUpperCase();
    let rows = document.getElementsByClassName('row2');
    let countRows = document.getElementsByClassName('row2').length;

        for (let j=0; j<countRows;j++){
            let sur = rows[j].getElementsByClassName("surname")[0];
            let name = rows[j].getElementsByClassName("name")[0];
            let pat = rows[j].getElementsByClassName("patronimic")[0];
            let comN = rows[j].getElementsByClassName("companyName")[0];
            if(sur.textContent.toUpperCase().indexOf(filter) > -1 || name.textContent.toUpperCase().indexOf(filter) > -1 ||
            pat.textContent.toUpperCase().indexOf(filter) > -1 || comN.textContent.toUpperCase().indexOf(filter) > -1){
                rows[j].style.display = "";
            }
            else{
                rows[j].style.display = "none";
            }
        }
    }
document.addEventListener('keyup', search);
</script>
</body>
</html>